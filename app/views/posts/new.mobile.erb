
    <div class="card" style="height: 100%">
      <%= form_for @post, url: user_post_path, :html => {:multipart => true} do |f| %>
        <div class="card-body">
          <%= hidden_field_tag :user_id, current_user.id %>
          <div class="row" style="margin: 0; padding: 0;">
            <div class="col-md-5 d-flex flex-column justify-content-between">
              <div class="form-group">
                <%= f.label :image_url, 'Post Image' %>
                <%= f.text_field :image_url, class: "form-control" %>
                <%# <%= f.file_field :image_url, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :title, 'Title' %>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :subtitle, 'Subtitle' %>
                <%= f.text_field :subtitle, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-7">
              <div class="form-group" style="height: 100%">
                <%= f.label :body %>
                <%= f.text_area :body, style: "height: calc(100% - 40px)", class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <%= f.submit 'Post', class: "float-right btn btn-dark btn-inline" %>
        </div>
      <% end %>
    </div>
