<div class="row">
  <div class="col-md-10 offset-md-1" style="height: 100%">
    <div class="card" style="height: 100%">
      <div class="card-header text-center">
        New Post
      </div>
      <%= form_for @post, url: user_post_path, :html => {:multipart => true}, method: :patch do |f| %>
        <div class="card-body">
          <%= hidden_field_tag :user_id, current_user.id %>
          <%= hidden_field_tag :id, @post.id %>
          <div class="row" style="margin: 0; padding: 0;">
            <div class="col-md-4 d-flex flex-column">
              <div class="form-group">
                <%= f.label :image_url, 'Post Image' %>
                <%= f.text_field :image_url, class: "form-control" %>
                <%# <%= f.file_field :image_url, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :title, 'Title' %>
                <%= f.text_field :title, class: "form-control" %>
              </div>
              <div class="form-group">
                <%= f.label :subtitle, 'Subtitle' %>
                <%= f.text_field :subtitle, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-8">
              <div class="form-group" style="height: 600px">
                <%= f.label :body %>
                <%= f.text_area :body, style: "height: calc(100% - 40px)", class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer">
          <%= f.submit 'Post', class: "float-right btn btn-dark btn-inline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
