<%= form_for @contact do |f| %>
  <div class="custom-title text-center">Contact Us</div>
  <div class="subtitle text-center">Question, suggestions or you just love the site, feel free to contact us</div>
  <br />
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :comments %>
        <%= f.text_area :comment, class: 'form-control' %>
      </div>

      <%= f.submit 'Submit', class: "btn btn-dark btn-block" %>
    </div>
  </div>

<% end %>
