<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="display-2 text-center">
      <i class="fab fa-dev"></i>
    </div>
    <div class="display-2 text-center">Dev Match</div>
    <br>
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field form-group">
            <%= f.label :email, style: 'font-size: 2rem' %><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
          </div>
          <div class="field form-group">
            <%= f.label :password, style: 'font-size: 2rem' %><br/>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, style: 'font-size: 1.8rem' %>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-dark btn-block", style: 'font-size: 1.8rem' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
