<div class="container">
  <div class="row d-flex flex-column justify-content-center align-items-center">
    <div class="display-2 text-center">
      <i class="fab fa-dev"></i>
    </div>
    <% if params[:plan] == '3' %>
      <div class=" text-center">
        <h1>Dev-Match Professional</h1>
        <p>Sign up for the Professional plan at $10/month and get full access to the community.</p>
      </div>
    <% elsif params[:plan] == '2' %>
      <div class=" text-center">
        <h1>Dev-Match Standard</h1>
        <p>Sign up for the Standard plan at $5/month and get access to the community with boosted ads.</p>
      </div>
    <% else %>
      <div class="text-center">
        <h1>Dev-Match Free</h1>
        <p>Sign up for the free plan and get basic access to the community.</p>
      </div>
    <% end %>
    
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <% if params[:plan] == '3' %>
            <%= render "pro_form" %>
          <% elsif params[:plan] == '2' %>
            <%= render "pro_form" %>
          <% else %>
            <%= render "basic_form" %>
          <% end %>
          <%= render "devise/shared/links" %></div>
      </div>
    </div>
  </div>
</div>
